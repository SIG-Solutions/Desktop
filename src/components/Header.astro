---
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navLinks = [
  { href: '/work', label: 'Work' },
  { href: '/capabilities', label: 'Capabilities' },
  { href: '/how-we-think', label: 'How We Think' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="header">
  <div class="header-container">
    <a href="/" class="logo">LeadLabs</a>

    <nav class="nav">
      {navLinks.map(link => (
        <a
          href={link.href}
          class={`nav-link ${currentPath === link.href ? 'active' : ''}`}
        >
          {link.label}
        </a>
      ))}
    </nav>

    <a href="/#giveaway" class="btn btn-primary header-cta">
      Win a Free Website (R8 999 Value)
    </a>

    <button class="mobile-menu-btn" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<div class="mobile-nav">
  <nav class="mobile-nav-links">
    {navLinks.map(link => (
      <a href={link.href} class="mobile-nav-link">
        {link.label}
      </a>
    ))}
    <a href="/#giveaway" class="btn btn-primary mobile-cta">
      Win a Free Website
    </a>
  </nav>
</div>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: var(--color-white);
    border-bottom: 1px solid var(--color-light-grey);
    height: var(--header-height);
  }

  .header-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-6);
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-8);
  }

  .logo {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-primary-black);
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  .logo:hover {
    color: var(--color-primary-black);
  }

  .nav {
    display: flex;
    align-items: center;
    gap: var(--space-8);
  }

  .nav-link {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-muted-text);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-primary-black);
  }

  .header-cta {
    font-size: var(--text-xs);
    padding: var(--space-3) var(--space-5);
    white-space: nowrap;
  }

  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 24px;
    height: 24px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .mobile-menu-btn span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: var(--color-primary-black);
    transition: transform var(--transition-base), opacity var(--transition-base);
  }

  .mobile-nav {
    display: none;
    position: fixed;
    top: var(--header-height);
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--color-white);
    z-index: 99;
    padding: var(--space-8) var(--space-6);
  }

  .mobile-nav.open {
    display: block;
  }

  .mobile-nav-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .mobile-nav-link {
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    color: var(--color-primary-black);
    text-decoration: none;
  }

  .mobile-cta {
    margin-top: var(--space-4);
  }

  @media (max-width: 1024px) {
    .nav {
      display: none;
    }

    .header-cta {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }
</style>

<script>
  const menuBtn = document.querySelector('.mobile-menu-btn');
  const mobileNav = document.querySelector('.mobile-nav');

  menuBtn?.addEventListener('click', () => {
    mobileNav?.classList.toggle('open');
    menuBtn.classList.toggle('open');
  });

  // Close mobile menu when clicking a link
  document.querySelectorAll('.mobile-nav-link, .mobile-cta').forEach(link => {
    link.addEventListener('click', () => {
      mobileNav?.classList.remove('open');
      menuBtn?.classList.remove('open');
    });
  });
</script>
